#
# Gradle aliases
#

# Build (b)  
alias Gb='./gradlew build install -xtest'

# Clean (c)
alias Gc='./gradlew clean'
alias Gcb='./gradlew clean build install -xtest'
alias Gci='./gradlew cleanIdea idea'
alias Gct='./gradlew clean test'
alias Gctp='./gradlew clean test --project-dir'

# IntelliJ (i)
alias Gi='./gradlew idea'

# Test (t)
alias Gt='./gradlew test'
alias Gtp='./gradlew test --project-dir'