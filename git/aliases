#
# Git aliases
#

# Branch (b)
alias gbu='~/.dotfiles/git/git-update'

# Commit (c)
alias gcx='git cherry-pick --abort'
alias gcm='git commit --all --message'

# Index (i)
alias giaa='git add --all'

# Pull request (pr)
alias gprh='~/.dotfiles/git/git-pull-request-handle'

# Push (p)
alias gpo='git push origin'
alias gpom='git push origin master'

# Topic Branch (t)
alias gtX='~/.dotfiles/git/git-topic-branch-remove'
alias gtu='~/.dotfiles/git/git-sync-upstream'

# Working Copy (w)
alias gwU='git checkout -f;git reset --hard HEAD;git clean -f -d'